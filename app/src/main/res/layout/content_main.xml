<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.devwiki.bill.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/bottom_nav_item_layout">

            <ImageView
                style="@style/bottom_nav_item_icon"
                android:contentDescription="@string/bottom_nav_bill"
                android:src="@drawable/ic_bill_white_24dp"/>

            <TextView
                style="@style/bottom_nav_item_text"
                android:text="@string/bottom_nav_bill"/>
        </LinearLayout>

        <LinearLayout
            style="@style/bottom_nav_item_layout">

            <ImageView
                style="@style/bottom_nav_item_icon"
                android:contentDescription="@string/bottom_nav_template"
                android:padding="2dp"
                android:src="@drawable/ic_template_white_24dp"/>

            <TextView
                style="@style/bottom_nav_item_text"
                android:text="@string/bottom_nav_template"/>
        </LinearLayout>

        <LinearLayout
            style="@style/bottom_nav_item_layout">

            <ImageView
                style="@style/bottom_nav_item_icon"
                android:contentDescription="@string/bottom_nav_report"
                android:src="@drawable/ic_report_white_24dp"/>

            <TextView
                style="@style/bottom_nav_item_text"
                android:text="@string/bottom_nav_report"/>
        </LinearLayout>

        <LinearLayout
            style="@style/bottom_nav_item_layout">

            <ImageView
                style="@style/bottom_nav_item_icon"
                android:contentDescription="@string/bottom_nav_tool"
                android:src="@drawable/ic_tool_white_24dp"/>

            <TextView
                style="@style/bottom_nav_item_text"
                android:text="@string/bottom_nav_tool"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
